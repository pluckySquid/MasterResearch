<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">


    <TextView
        android:id="@+id/xText"
        android:layout_width="fill_parent"
        android:layout_height="35dp"

        android:layout_marginTop="200dp"

        android:text="Xacc"
        app:layout_constraintBottom_toTopOf="@+id/yText"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/yText"
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:layout_marginTop="15dp"
        android:text="Yacc"
        app:layout_constraintTop_toBottomOf="@+id/xText"
        tools:layout_editor_absoluteX="0dp" />


    <TextView
        android:id="@+id/zText"
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:layout_marginTop="20dp"
        android:text="Zacc"
        app:layout_constraintTop_toBottomOf="@+id/yText"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/xOri"
        android:layout_width="fill_parent"
        android:layout_height="35dp"


        android:layout_marginTop="28dp"

        android:text="XOri"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/zText" />

    <TextView
        android:id="@+id/yOri"
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:layout_marginTop="20dp"

        app:layout_constraintTop_toBottomOf="@+id/xOri"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/zOri"
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/yOri"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/aText"
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/zOri"
        tools:layout_editor_absoluteX="0dp" />




    <EditText
        android:id="@+id/ipText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"

        android:layout_marginEnd="8dp"
        android:ems="10"
        android:hint="Please enter the ip address"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/xText"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="startSending"
        android:text="start"
        app:layout_constraintEnd_toStartOf="@+id/stop"
        app:layout_constraintHorizontal_bias="0.091"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button" />

    <Button
        android:id="@+id/stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:onClick="stopSending"
        android:text="Stop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.915"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:onClick="changeTableName"
        android:text="click to change"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ipText" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="87dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:onClick="deleteTable"
        android:src="@android:drawable/ic_delete"
        android:text="delete table"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aText"
        app:layout_constraintVertical_bias="0.494" />

</android.support.constraint.ConstraintLayout>